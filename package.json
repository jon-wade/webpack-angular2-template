{
  "name": "angular2-fullstack-template",
  "version": "1.0.0",
  "description": "A fullstack Angular2 template, using typescript on the backend",
  "scripts": {
    "frontend:start": "webpack-dev-server --inline --progress --port 8080",
    "frontend:test": "karma start",
    "frontend:build": "rimraf dist && webpack --config config/webpack.prod.js --progress --profile --bail",
    "backend:compile": "tsc -outDir src/server/js -w src/server/*.ts",
    "backend:start": "nodemon src/server/js/server.js",
    "backend:test": "tsc -outDir src/server/js/test src/server/test/*.ts && mocha src/server/js/test"
  },
  "license": "MIT",
  "author": "Jon Wade",
  "dependencies": {
    "@angular/common": "2.0.0",
    "@angular/compiler": "2.0.0",
    "@angular/core": "2.0.0",
    "@angular/forms": "2.0.0",
    "@angular/http": "2.0.0",
    "@angular/platform-browser": "2.0.0",
    "@angular/platform-browser-dynamic": "2.0.0",
    "@angular/router": "3.0.0",
    "body-parser": "^1.15.2",
    "core-js": "^2.4.1",
    "express": "^4.14.0",
    "mongoose": "^4.5.1",
    "reflect-metadata": "0.1.2",
    "rxjs": "5.0.0-beta.12",
    "zone.js": "0.6.23"
  },
  "devDependencies": {
    "angular2-template-loader": "^0.4.0",
    "awesome-typescript-loader": "^2.2.4",
    "chai": "^3.5.0",
    "chai-http": "^3.0.0",
    "css-loader": "^0.23.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.8.5",
    "html-loader": "^0.4.3",
    "html-webpack-plugin": "^2.15.0",
    "jasmine-core": "^2.4.1",
    "karma": "^1.2.0",
    "karma-jasmine": "^1.0.2",
    "karma-phantomjs-launcher": "^1.0.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^1.8.0",
    "mockery": "^1.7.0",
    "nodemon": "^1.10.0",
    "null-loader": "^0.1.1",
    "phantomjs-prebuilt": "^2.1.7",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.5.2",
    "style-loader": "^0.13.1",
    "ts-loader": "^0.8.1",
    "typescript": "^2.0.2",
    "typings": "^1.3.2",
    "webpack": "^1.13.0",
    "webpack-dev-server": "^1.14.1",
    "webpack-merge": "^0.14.0"
  }
}
